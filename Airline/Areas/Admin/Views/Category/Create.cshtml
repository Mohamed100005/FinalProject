@model Category
<link rel="stylesheet" href="~/css/countdet.css" />

<div class="main_page col-12">
    <div class="main_content col-5">
        <div class="upper_content col-12">
            <h1 class="mb-4">
                Create categories
            </h1>
            <form asp-area="admin" asp-controller="Category" asp-action="Create" method="post">
                <input class="form-control mb-3" type="text" name="name" placeholder="Enter category name" value="@Model.Name" />
                <button class="btn-primary" type="submit">Create</button>
            </form>
        </div>
    </div>
</div>